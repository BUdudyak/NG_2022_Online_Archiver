@model ArchivedFilesModel

@{
    ViewBag.Title = "Archiver";
    int i = 0;
}
<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-color: teal;
            background-image: linear-gradient(to bottom right, moccasin, teal);
        }
    </style>
</head>

<body>
    
    <h2>Выбрать файлы для архивации</h2>


    <form asp-controller="Home" asp-action="Archivation" method="post">
        @foreach (var filename in Model.FileName)
        {
            <p>
                <input type="checkbox" name="files[@i].Selected" value="true" />
                <input type="hidden" name="files[@i].Selected" value="false" />
                <input type="hidden" name="files[@i].Name" value="@filename" />
                @filename
            </p>

            i++;
        }
        <p>Select the degree of compression of the files</p>
        <input type="radio" id="low" name="CompresionLevel" value="3">
        <label for="low">Low</label><br>
        <input type="radio" id="medium" name="CompresionLevel" value="6">
        <label for="medium">Medium</label><br>
        <input type="radio" id="high" name="CompresionLevel" value="9">
        <label for="high">High</label>
        <p><input asp-for="ArchiveName" required placeholder="Archive name"></p>
        <input type="submit" value="Archivate" />
    </form>
</body>

</html>