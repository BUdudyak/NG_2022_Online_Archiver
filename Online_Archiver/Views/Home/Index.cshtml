@model IEnumerable<Online_Archiver.Models.FileDetails>
@*@model Online_Archiver.Models.FilesUploadModel*@
@{
    ViewData["Title"] = "Home Page";
}
<html>
<head>
    <style>
        body {
            background: rgb(187,210,197);
            background: linear-gradient(167deg, rgba(187,210,197,1) 0%, rgba(83,105,118,1) 50%, rgba(41,46,73,1) 100%);
        }
        
        input {
            margin-top: 1rem;
        }

            input::file-selector-button {
                font-weight: bold;
                color: dodgerblue;
                padding: 0.5em;
                border: thin solid black;
                border-radius: 6px;
            }
    </style>
</head>


<body>
    
    <form method="post" asp-controller="Home" asp-action="Upload" enctype="multipart/form-data">
        <input id="chooser" type="file" name="files" multiple />
        <button id="chbutton" type="submit">Upload</button>
    </form>
    
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success" style="margin-top:50px">
            @ViewBag.Message
        </div>
    }
</body>
</html>


